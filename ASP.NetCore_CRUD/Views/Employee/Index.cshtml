@model IEnumerable<ASP.NetCore_CRUD.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Employee Register</h4>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success btn-lg"><i class="fa fa-plus-square"></i> New Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => employee.EmployeeCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.Position)
                    </td> 
                    <td>
                        @Html.DisplayFor(modelItem => employee.OfficeLocation)
                    </td>
                    <td>
                        <a asp-action="AddOrEdit" asp-route-id="@employee.Id"><i class="fa fa-marker "></i></a> |
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="text-danger" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash-alt"></i></a>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
